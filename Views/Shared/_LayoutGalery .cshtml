<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="../favicon.ico">
    <link rel="stylesheet" type="text/css" href="css/style.css" />
    <script src="js/modernizr.custom.70736.js"></script>
    <noscript><link rel="stylesheet" type="text/css" href="css/noJS.css" /></noscript>
    <title>@ViewBag.Title - MVR Casa Pronta</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/gama")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/css")
    @Scripts.Render("~/bundles/gama")
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MVR Casa Pronta", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Início", "Index", "Home")</li>
                    <li>@Html.ActionLink("Sobre a MVR", "About", "Home")</li>
                    <li>@Html.ActionLink("Nossos Projetos", "Index", "Projects")</li>
                    <li>@Html.ActionLink("Contato", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div>
        <div class="container body-content">


            @RenderBody()

            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - MVR Casa Pronta</p>
            </footer>
        </div>
    </div>


    @Scripts.Render("~/Scripts/gamma")
    @Scripts.Render("~/Scripts/jquery.history.js")
    @Scripts.Render("~/Scripts/jquery.masonry.min.js")
    @Scripts.Render("~/Scripts/jquerypp.custom")
    @Scripts.Render("~/Scripts/js-url.js")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/blundles/style.css") 
    @Scripts.Render("~/blundles/demo.css")
    @Scripts.Render("~/blundles/noJs.css")
    @Scripts.Render("~/js/modernizr.custom.70736.js")
    @RenderSection("scripts", required: false)
</body>
</html>
