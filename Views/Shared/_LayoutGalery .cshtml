
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="../favicon.ico">
    <link rel="stylesheet" type="text/css" href="~/Content/style.css" />
    <script src="~/Scripts/modernizr.custom.70736.js"></script>
    <noscript><link rel="stylesheet" type="text/css" href="~/Content/noJS.css" /></noscript>
    <title>@ViewBag.Title - MVR Casa Pronta</title>
    @Styles.Render("~/Content/css")
    @*@Styles.Render("~/Content/gama")*@
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/gama")*@
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MVR Casa Pronta", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Início", "Index", "Home")</li>
                    <li>@Html.ActionLink("Sobre a MVR", "About", "Home")</li>
                    <li>@Html.ActionLink("Nossos Projetos", "Index", "Projects")</li>
                    <li>@Html.ActionLink("Contato", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div>
        <div class="container body-content">


            @RenderBody()

        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MVR Casa Pronta</p>
        </footer>
    </div>


</body>
</html>
